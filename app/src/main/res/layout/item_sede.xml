<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSede1"
        android:layout_width="331dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="3dp"
        android:background="#FFFFFF"
        android:backgroundTint="#F1F7CF"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:translationX="210sp">

            <ImageView
                android:id="@+id/imageViewSede1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/hamburguesa" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewNombreSede1"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Sede San Isidro"
            android:textColor="#000000"
            android:textSize="16sp"
            android:translationX="30dp"
            android:translationY="25dp" />

        <TextView
            android:id="@+id/textViewNombreDireccion1"
            android:layout_width="186dp"
            android:layout_height="31dp"
            android:fontFamily="@font/lato"
            android:text="Av. Primavera 545, San Borja 15037"
            android:textColor="#6C6C6C "
            android:textSize="14sp"
            android:translationX="30dp"
            android:translationY="55dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>